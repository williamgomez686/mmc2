@{
    List<SelectListItem> Motivos = (List<SelectListItem>)ViewBag.Motivos;
    List<SelectListItem> Empresa = (List<SelectListItem>)ViewBag.Empresas;
}

@{
    ViewData["Title"] = "Diario por Motivo";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout_Menu_lateral.cshtml";
    //ViewBag.foto
}

<div class="container text-center">
    <div class="h3"><label class="text-center">Diario por Motivo</label></div>

    <div class="row">
        <div class="col-md-1">
            .
        </div>
        <div class="col-sm-9">
            <div class="card">
                <div class="card-header">
                    Generar Rporte en Excel del Diario por Motivo
                </div>
                <div class="card-body">
                    <form asp-action="DporMotivo" asp-controller="Contabilidad" method="post">

                        @*

                        <div class="form-group">
                        @Html.DropDownList("EMPCOD", Empresa, "SELECCIONE  EMPRESA", new { @class = "form-control" })
                        </div>
                        *@
                        <div class="form-group">
                            @Html.DropDownList("MOTIVO", Motivos, "TODOS LOS MOTIVOS. ", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="text-muted">Fecha Inicial</label>
                            <input type="date" name="FIni" id="fIni"/>
                        </div>

                        <div class="form-group">
                            <label class="text-muted">Fecha Final</label>
                            <input type="date" name="Ffin" id="fFin"/>
                        </div>
                        <button class="btn btn-primary" type="submit">Ver</button>
                         <input type="submit" name="Export" value="Descargar Excel"  class="btn btn-success" asp-action="DescargaExcel" />
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

