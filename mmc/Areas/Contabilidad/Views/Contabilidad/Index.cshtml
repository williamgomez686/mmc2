@{
    List<SelectListItem> Motivos = (List<SelectListItem>)ViewBag.Motivos;
    List<SelectListItem> Empresa = (List<SelectListItem>)ViewBag.Empresas;
}

<div class="container text-center">
    <div class="h3"><label class="text-center">Diario por Motivo</label></div>

    <div class="row">
        <div class="col-md-3">
            .
        </div>
        <div class="col-sm-7">
            <div class="card">
                <div class="card-header">
                    Generar Rporte en Excel del Diario por Motivo
                </div>
                <div class="card-body">
                    <form asp-action="DporMotivo" asp-controller="Contabilidad" method="post">

                        <div class="form-group">
                            @Html.DropDownList("EMPCOD", Empresa, "SELECCIONE  EMPRESA", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.DropDownList("MOTIVO", Motivos, "SELECCIONE  UN MOTIVO", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="text-muted">Fecha Inicial</label>
                            <input type="date" name="FIni" id="fIni"/>
                        </div>

                        <div class="form-group">
                            <label class="text-muted">Fecha Final</label>
                            <input type="date" name="Ffin" id="fFin"/>
                        </div>
                        <button class="btn btn-success" type="submit">Ver</button>

                        <div class="col-md-5">
                            <input type="submit" name="Export" value="Descargar Excel"  class="btn btn-primary" asp-action="DescargaExcel" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>



