@model mmc.Modelos.ContabilidadModels.ViewModels.ActivoFijoUpdateVW
@{
    ViewData["Title"] = "Activos Fijos";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout_Menu_lateral.cshtml";
    //ViewBag.foto
}



<br />
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ActivosFIjosFoto" enctype="multipart/form-data">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IDCONTA" />
                    <div class="form-group row">
                        <div class="col-2">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                        <div class="col-10">

                            <input type="file" name="files" id="escogerImg" multiple class="form-control" />

                        </div>
                        <div class="form-group">

                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ACFIOBS" class="control-label"></label>
                        <input asp-for="ACFIOBS" class="form-control" />
                        <span asp-validation-for="ACFIOBS" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IDCONTA" />

                    <div class="form-group">
                        <label>Id Contabilidad: </label>
                        <label class="text-muted">@Model.IDCONTA</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="TIPOACTIVO" class="control-label"></label>
                        <label class="text-muted">: @Model.TIPOACTIVO</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="SUBTIPOACTIVO" class="control-label"></label>
                        <label class="text-muted">: @Model.SUBTIPOACTIVO</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="MARCA" class="control-label"></label>
                        <label class="text-muted">: @Model.MARCA</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="MODELO" class="control-label"></label>
                        <label class="text-muted">: @Model.MODELO</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="SERIE" class="control-label"></label>
                        <label class="text-muted">: @Model.SERIE</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="DESCRIPCION" class="control-label"></label>
                        <label class="text-muted">: @Model.DESCRIPCION</label>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="PROVEEDOR" class="control-label"></label>
                        <label class="text-muted">: @Model.PROVEEDOR</label>
                    </div>

                    <div class="form-group">
                        <label asp-for="NOFACTURA" class="control-label"></label>
                        <label class="text-muted">: @Model.NOFACTURA</label>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="PRECIO" class="control-label"></label>
                        <label class="text-muted">: @Model.PRECIO</label>
                    </div>
                    <hr>
                    <div class="form-group">
                        <label asp-for="EstadoDescripcion" class="control-label"></label>
                        <label class="text-muted">: @Model.EstadoDescripcion</label>
                    </div>
                    <!-- Otras propiedades... -->

                    <hr />
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    
                    @if (!string.IsNullOrEmpty(Model.ACFIFOTO))
                    {
                        <img src="@Model.ACFIFOTO" width="400" />
                    }
                </div>
                
                    <div class="form-group">
                        <label asp-for="EMPLEADO" class="control-label"></label>
                        <label class="text-muted">: @Model.EMPLEADO</label>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="APELLIDO" class="control-label"></label>
                        <label class="text-muted">: @Model.APELLIDO</label>
                    </div>

                <!-- Otras propiedades... -->

            </div>
        </div>
    </div>
</div>



