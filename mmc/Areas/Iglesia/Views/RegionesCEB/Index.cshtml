@{
    //Layout = "~/Views/Shared/_Layout_cdn.cshtml";
    Layout = "~/Views/Shared/_Layout_Menu_lateral.cshtml";
    ViewData["Title"] = "Regiones";
}


<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de Regiones  </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"> <i class="fas fa-plus"></i> Agregar</a>
    </div>
</div>
<div class="p-4 border rounded">
    <table id="tblDatos" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" >
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Región </th>
                <th>Dirección </th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

<br />
<hr />
@section Scripts{
    <script src="~/js/region.js"></script>
}
