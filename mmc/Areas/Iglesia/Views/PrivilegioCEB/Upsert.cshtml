@model mmc.Modelos.IglesiaModels.PrivilegioCEB

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Nuevo Privilegio";
}

<form method="post">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.Id != 0)
    {
        // Actualizar
        titulo = "Actualizar Privilegios";
    }

    <div class="col-12 border-bottom">
        <h2 class="text-primary">@titulo</h2>
    </div>

    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Cargos"></label>
            </div>
            <div class="col-8">
                <input asp-for="Cargos" class="form-control" />
                <span asp-validation-for="Cargos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Estado"></label>
            </div>
            <div class="col-4">
                <select asp-for="Estado" class="form-control">
                    <option value=true>Activo</option>
                    <option value=false>Inactivo</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-4">
                @if (Model.Id != 0)
                {
                    <partial name="_BotonesActualizarYRegresar" model="Model.Id" />
                }
                else
                {
                    <partial name="_BotonesCrearYRegresar" />
                }
            </div>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

