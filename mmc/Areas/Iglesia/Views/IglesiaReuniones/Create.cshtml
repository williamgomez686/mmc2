@model IglesiaReuniones

@{
    ViewData["Title"] = "Crear Reunión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Reuniones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreReunion" class="control-label"></label>
                <input asp-for="NombreReunion" class="form-control" />
                <span asp-validation-for="NombreReunion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReunionFecha" class="control-label"></label>
                <input asp-for="ReunionFecha" class="form-control" />
                <span asp-validation-for="ReunionFecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
