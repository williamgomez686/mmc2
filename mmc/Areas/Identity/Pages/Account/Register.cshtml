@page
@model RegisterModel
@using mmc.Utilidades
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>


<div class="col-md-7 mx-auto">
    <div class="card">
        <div class="card-header">
            <h4 class="text-center">Crea tu cuenta.</h4>
        </div>
        <div class="card-body">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.UserName" class="form-control" placeholder="Usuario" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Correo"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.nombre" class="form-control" placeholder="Nombres" />
                    <span asp-validation-for="Input.nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.apellido" class="form-control" placeholder="Apellidos"/>
                    <span asp-validation-for="Input.apellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.empresa" class="form-control" placeholder="Empresa"/>
                    <span asp-validation-for="Input.empresa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.departamento" class="form-control" placeholder="Departamento"/>
                    <span asp-validation-for="Input.departamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.extencion" class="form-control" placeholder="Numero de Extencion (Opcional)"/>
                    <span asp-validation-for="Input.extencion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefono"/>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Contraseña"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirme Contraseña"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                @if (User.IsInRole(DS.Role_Admin))
                {
                    <div class="form-group">
                        <label asp-for="Input.role"></label>
                        @Html.DropDownListFor(r => r.Input.role, Model.Input.ListaRol, "Seleccione un Rol", new { @class = "form-control" })
                    </div>
                }
            <div class="text-right"><button type="submit" class="btn btn-primary">Registrarse</button></div>

            </form>

        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-4">
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
