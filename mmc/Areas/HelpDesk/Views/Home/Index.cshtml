@model IEnumerable<mmc.Modelos.IglesiaModels.MiembrosCEB>


    <h2 class="text-center text-primary">Lista de servidores</h2>
    <br />
    <hr />
<div class="row pb-3">
    @foreach(var Lider in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card" style="border:0px;">
                        <img src="@Lider.ImagenUrl" class="card-img-top rounded" height="240" width="400" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@Lider.Name @Lider.lastName</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Telefono: <b> @Lider.phone</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Region: <b> @Lider.RegionId @Lider.Id</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Detalle" class="btn btn-primary form-control" asp-route-id="@Lider.Id">Detalle</a>
                    </div>

                            <a  href="/Iglesia/MiembrosCEB/Upsert/@Lider.Id" class="text-primary" style="cursor:pointer">
                                 <i class="fa-solid fa-house-medical-flag"></i>
                            </a>
                </div>
            </div>
        </div>

    }


</div>