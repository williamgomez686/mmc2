@model IEnumerable<mmc.Modelos.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Estos son sus Tickets <i class="fas fa-ticket-alt"></i> </h1>
<hr />

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Tiket <i class="fas fa-plus-circle"></i></a>
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header">
                    <div class="text-center font-weight-bold">
                        No. @Html.DisplayFor(modelItem => item.Id)

                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye text-info"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt fs-1 text-danger"></i></a>
                       
                    </div>
                </div>
                <div class="card-body">
                    <label for="">@Html.DisplayFor(modelItem => item.Asunto)</label>
                </div>
                <div class="card-body fs-5 font-weight-light">
                    <label class="fs-6 form-group">Usuario: @Html.DisplayFor(modelItem => item.UsuarioAplicacionId)</label>
                    <div>
                        Fecha: @Html.DisplayFor(modelItem => item.FechaAlta)
                    </div>
                </div>
            </div>
        </div>
    }
</div>


