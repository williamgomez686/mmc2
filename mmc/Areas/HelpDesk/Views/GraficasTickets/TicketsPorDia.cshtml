@model List<mmc.Modelos.common.TicketsPorDiaViewModel>
@{
    ViewData["Title"] = "Graficas";
    Layout = "~/Views/Shared/_Layout_Menu_lateral.cshtml";
}

<div>
    <canvas id="ticketsChart" width="400" height="200"></canvas>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('ticketsChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [@foreach (var item in Model)
        {
            <text>"@item.Fecha.ToShortDateString()",</text>
        }],
                datasets: [{
                    label: 'Número de Tickets',
                    data: [@foreach (var item in Model)
        {
            <text>@item.NumeroTickets,</text>
        }],
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}
